<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@drawable/left_menu_background">

    <RelativeLayout
        android:id="@+id/left_menu_image_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <ImageView
            android:src="@drawable/user_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingBottom="20dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/left_menu_collection_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_menu_image_layout"
        android:paddingBottom="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/left_menu_collection_imageview"
            android:layout_alignParentLeft="true"
            android:background="@drawable/icon_collection_black"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <Button
            android:text="收藏"
            android:layout_toRightOf="@id/left_menu_collection_imageview"
            android:id="@+id/collection_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#00000000"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/left_menu_collection_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/left_menu_record_imageview"
            android:layout_alignParentLeft="true"
            android:background="@drawable/icon_record_black"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <Button
            android:text="消息记录"
            android:layout_toRightOf="@id/left_menu_record_imageview"
            android:id="@+id/record_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#00000000"/>

    </RelativeLayout>



</RelativeLayout>